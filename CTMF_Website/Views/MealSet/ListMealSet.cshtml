@model System.Data.DataTable

@{
	ViewBag.Title = "ListMealSet";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/CSS/table.css" rel="stylesheet" />
<div class="container container-fix">
	<fieldset>
		<legend class="table-title">Quản lý suất ăn</legend>
		<div>
			<div class="table-body">
				<div style="margin-bottom:20px;">
					<a href="~/MealSet/AddMealSet" class="btn btn-primary">Thêm suất ăn mới</a>
					<div class="pull-right">
						@using (Html.BeginForm("ListMealSet", "MealSet", FormMethod.Get))
						{
							<div id="custom-search-input">
							<div class="input-group">
								<input type="text" name="search" class="search-query form-control" placeholder="Tìm kiếm" />
								<span class="input-group-btn">
									<button class="btn btn-danger" type="submit">
										<span class=" glyphicon glyphicon-search"></span>
									</button>
								</span>
							</div>
						</div>
						}
					</div>
				</div>
				<table class="table table-bordered table-hover table-condensed">
					<thead>
						<tr>
							<th>STT</th>
							<th>Tên suất ăn</th>
							<th>Ăn thêm</th>
							<th>Quản lý</th>
						</tr>
					</thead>
					<tbody>
						@{
							int count = 0;
						}
						@foreach (System.Data.DataRow row in Model.Rows)
						{
							count++;
							<tr>
								<td>@count</td>
								<td>@row["Name"]</td>
								@if (row["CanEatMore"].Equals(true))
								{
									<td><span style="color: #10CB10" class="glyphicon glyphicon-ok"></span></td>
								}
								else
								{
									<td><span style="color:red" class="glyphicon glyphicon-remove"></span></td>
								}
								<td>
									<div>
										<button class="btn btn-info" title="Chi tiết"><span class="glyphicon glyphicon-info-sign"></span></button>
										<a href="@Url.Action("EditMealSet", "MealSet", new {mealSetID = @row["MealSetID"] })" class="btn btn-primary" title="Sửa"><span class="glyphicon glyphicon-pencil"></span></a>
										<a href="@Url.Action("AddMealSetDish", "MealSet", new { mealSetID = @row["MealSetID"] })" class="btn btn-success" title="Thêm"><span class="glyphicon glyphicon-plus"></span></a>
										<button class="btn btn-danger" title="Xóa"><span class="glyphicon glyphicon-remove-sign"></span></button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<div id="footer">
				<div>
					<nav>
						<ul class="pager">
							<li><a href="#">Previous</a></li>
							<li><a href="#">Next</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</fieldset>
</div>
