@model System.Data.DataTable
@{
	ViewBag.Title = "ListFeedback";
}

<div class="container container-fix">
	<fieldset>
		<legend class="title">Thông tin phản hồi</legend>
		<table class="table table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th>STT</th>
					<th>Tên người gửi</th>
					<th>Ngày gửi</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@{
					int count = 0;
				}
				@foreach (System.Data.DataRow row in Model.Rows)
				{
					string date = ((DateTime)row["InsertedDate"]).ToString("dd/MM/yyyy");
					string fullDate = ((DateTime)row["InsertedDate"]).ToString("dd/MM/yyyy hh:mm:sss");
					count++;
					<tr>
						<td>@count</td>
						<td>@row["UpdatedBy"]</td>
						<td>@date</td>
						<td>
							<button class="btn btn-link" data-toggle="modal" data-target="#@count">Chi tiết</button>
							<div id="@count" class="modal fade" role="dialog">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal">&times;</button>
											<h4 class="modal-title" style="text-align: center; font-weight: bold; font-size: 1.4em; text-transform: uppercase; color: #B00622">Phản hồi từ @row["UpdatedBy"]</h4>
										</div>
										<div class="modal-body">
											@row["Comment"]
										</div>
										<div class="modal-footer">
											@fullDate
										</div>
									</div>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
		@*<div id="footer">
				<div>
					<nav>
						<ul class="pager">
							<li><a href="#">Previous</a></li>
							<li><a href="#">Next</a></li>
						</ul>
					</nav>
				</div>
			</div>*@
	</fieldset>
</div>