@model CTMF_Website.Models.UserTypeModel
@{
	ViewBag.Title = "EditUserType";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-fix">
	@using (Html.BeginForm("EditUserType", "Account", new { typeShortName = Model.typeShortName }, FormMethod.Post, new { @class = "form-horizontal" }))
	{
		<fieldset>
			<legend class="title">Chỉnh sửa phân loại người dùng</legend>
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)

			@Html.HiddenFor(m => m.insertedDate)
			@Html.HiddenFor(m => m.lastUpdated)
			@Html.HiddenFor(m => m.updatedBy)

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.typeName, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.typeName, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4">

				</div>
				<div class="col-md-4">@Html.ValidationMessageFor(model => model.typeName, String.Empty, new { @style = "color:red" })</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.mealValue, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.mealValue, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4">

				</div>
				<div class="col-md-4">@Html.ValidationMessageFor(model => model.mealValue, String.Empty, new { @style = "color:red" })</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.moreMealValue, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.moreMealValue, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4">

				</div>
				<div class="col-md-4">
					@Html.ValidationMessageFor(model => model.moreMealValue, String.Empty, new { @style = "color:red" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.moreMealValue, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.moreMealValue, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.description, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextAreaFor(m => m.description, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.canDebt, new { @class = "control-label col-md-4" })
				<div class="col-md-1">
					@Html.CheckBoxFor(m => m.canDebt, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.canEatMore, new { @class = "control-label col-md-4" })
				<div class="col-md-1">
					@Html.CheckBoxFor(m => m.canEatMore, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group">
				<label class="col-md-4 control-label"></label>
				<div class="col-md-2">
					<button type="submit" class="btn btn-primary">Cập nhật</button>
				</div>
				<div class="col-md-2">
					<a class="btn btn-danger" onclick="javascript:window.history.back()">Hủy</a>
				</div>
			</div>
		</fieldset>
	}
</div>
