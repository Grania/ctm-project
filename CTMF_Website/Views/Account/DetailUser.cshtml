@model CTMF_Website.Models.UserinfoModel
@{
	ViewBag.Title = "DetailUser";
}
@{
	string role = "";
	if (Model.Role.Equals(1))
	{
		role = "Khách hàng";
	}
	if (Model.Role.Equals(2))
	{
		role = "Nhân viên nhà ăn";
	}
	if (Model.Role.Equals(3))
	{
		role = "Quản lý";
	}
	if (Model.Role.Equals(4))
	{
		role = "Quản trị viên";
	}
}
<div class="addForm">
	<legend class="title">Thông tin người dùng</legend>
	<div class="container">
		@using (Html.BeginForm("DetailUser", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "readonly" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.TypeName, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.TypeName, new { @class = "form-control", @readonly = "readonly" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.TypeName, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.TypeName, new { @class = "form-control", @readonly = "readonly", @Value = role})
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.AmountOfMoney, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.AmountOfMoney, new { @class = "form-control", @readonly = "readonly" })
				</div>
			</div>
		}
	</div>
</div>