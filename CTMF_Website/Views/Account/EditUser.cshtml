@model CTMF_Website.Models.UserInfoDetailModel
@{
	ViewBag.Title = "EditUser";
}
@{
	List<SelectListItem> userType = (List<SelectListItem>)ViewData["UserType"];

	List<SelectListItem> role = new List<SelectListItem>();
	role.Add(new SelectListItem { Text = "Khách hàng", Value = "1" });
	role.Add(new SelectListItem { Text = "Nhân viên nhà bếp", Value = "2" });
	role.Add(new SelectListItem { Text = "Quản lý", Value = "3" });
	role.Add(new SelectListItem { Text = "Quản trị viên", Value = "4" });
}
<div class="addForm">
	<legend class="title">Cập nhật thông tin người dùng</legend>
	<div class="container">
		@using (Html.BeginForm("EditUser", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Model.Username
					@Html.HiddenFor(m => m.Username)
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Name, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Email, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.UserTypeID, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.DropDownListFor(m => m.UserTypeID, new SelectList(userType, "Value", "Text", Model.UserTypeID), new { @class = "form-control", @style = "width:250px;" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Role, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.DropDownListFor(m => m.Role, new SelectList(role, "Value", "Text", Model.Role), new { @class = "form-control", @style = "width:250px;" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-2">
					<input type="submit" class="btn btn-primary" value="Cập nhật">
				</div>
				<div class="col-sm-2">
					<a href="~/Account/ListUser" class="btn btn-danger">Hủy</a>
				</div>
			</div>
		}
	</div>
</div>
