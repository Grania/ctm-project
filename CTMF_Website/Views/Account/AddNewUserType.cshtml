@model CTMF_Website.Models.UserTypeModel
@{
	ViewBag.Title = "AddNewUserType";
}

<div class="container container-fix">
	@using (Html.BeginForm("AddNewUserType", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
	{
		<fieldset>
			<legend class="title">Thêm loại người dùng</legend>
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true, String.Empty, new { @style = "color:red" })
			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.typeName, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.typeName, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4">

				</div>
				<div class="col-md-4">
					@Html.ValidationMessageFor(model => model.typeName, String.Empty, new { @style = "color:red" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.typeShortName, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.typeShortName, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4">

				</div>
				<div class="col-md-4">@Html.ValidationMessageFor(model => model.typeShortName, String.Empty, new { @style = "color:red" })</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.mealValue, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.mealValue, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4">

				</div>
				<div class="col-md-4">@Html.ValidationMessageFor(model => model.mealValue, String.Empty, new { @style = "color:red" })</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.moreMealValue, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextBoxFor(m => m.moreMealValue, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">
					@Html.ValidationMessageFor(model => model.moreMealValue, String.Empty, new { @style = "color:red" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.description, new { @class = "control-label col-md-4" })
				<div class="col-md-4">
					@Html.TextAreaFor(m => m.description, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.canDebt, new { @class = "control-label col-md-4" })
				<div class="col-md-1">
					@Html.CheckBoxFor(m => m.canDebt, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.canEatMore, new { @class = "control-label col-md-4" })
				<div class="col-md-1">
					@Html.CheckBoxFor(m => m.canEatMore, new { @class = "form-control", @placeholder = "" })
				</div>
			</div>

			<div class="form-group">
				<label class="col-md-4 control-label"></label>
				<div class="col-md-2">
					<button type="submit" class="btn btn-primary">Thêm mới</button>
				</div>
				<div class="col-md-2">
					<a href="@Url.Action("ViewUserType", "Account")" class="btn btn-danger">Hủy</a>
				</div>
			</div>
		</fieldset>
	}
</div>