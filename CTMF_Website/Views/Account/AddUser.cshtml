@model CTMF_Website.Models.UserInfoDetailModel
@{
	ViewBag.Title = "AddUser";
}
@{
	List<SelectListItem> items = (List<SelectListItem>)ViewData["UserType"];
}
<div class="addForm">
	<legend class="title">Thêm người dùng mới</legend>
	<div class="container">
		@using (Html.BeginForm("AddUser", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true, String.Empty, new { @style = "color:red" })
			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Username, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Password, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.ConfirmPassword, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Name, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Email, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.UserTypeID, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.DropDownListFor(m => m.UserTypeID, new SelectList(items, "Value", "Text"), new { @class = "form-control", @style = "width:250px;" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Role, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.DropDownListFor(m => m.Role, new[]{
						new SelectListItem { Text = "Khách hàng", Value = "1", Selected = true }
						,new SelectListItem { Text = "Nhân viên nhà bếp", Value = "2"}
						,new SelectListItem { Text = "Quản lý", Value = "3"}
						,new SelectListItem { Text = "Quản trị viên", Value = "4"}
						}
					, null, new { @class = "form-control", @style = "width:250px;"})
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<input type="submit" class="btn btn-danger" value="Thêm mới">
				</div>
			</div>
		}
	</div>
</div>
