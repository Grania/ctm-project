@model CTMF_Website.Models.UserTypeModel
@{
	ViewBag.Title = "DetailsUserType";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-fix">
	@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<fieldset>
		<legend class="title">Thông tin loại người dùng</legend>
		<div class="form-group">
			<div class="col-md-4 control-label">@Html.LabelFor(m => m.typeName)</div>
			<div class="col-md-4">
					@Html.TextBoxFor(m => m.typeName, new { @class = "form-control", @readonly = "readonly" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">@Html.LabelFor(m => m.typeShortName)</div>
			<div class="col-md-4">
					@Html.TextBoxFor(m => m.typeShortName, new { @class = "form-control", @readonly = "readonly" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">@Html.LabelFor(m => m.mealValue)</div>
			<div class="col-md-4">
					@Html.TextBoxFor(m => m.mealValue, new { @class = "form-control", @readonly = "readonly" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label"> @Html.LabelFor(m => m.moreMealValue)</div>
			<div class="col-md-4">
					@Html.TextBoxFor(m => m.moreMealValue, new { @class = "form-control", @readonly = "readonly" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">@Html.LabelFor(m => m.description)</div>
			<div class="col-md-4">
					@Html.TextBoxFor(m => m.description, new { @class = "form-control", @readonly = "readonly" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">@Html.LabelFor(m => m.canDebt)</div>
			<div class="col-md-1">
					@Html.CheckBoxFor(m => m.canDebt, new { @class = "form-control", @disabled = "disabled" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">@Html.LabelFor(m => m.canEatMore)</div>
			<div class="col-md-1">
					@Html.CheckBoxFor(m => m.canEatMore, new { @class = "form-control", @disabled = "disabled" })
			</div>
		</div>
		<a class="btn btn-warning" style="margin-bottom: 20px;" onclick="javascript:window.history.back()"><span class="glyphicon glyphicon-arrow-left"></span> Quay Lại</a>
	</fieldset>
}
</div>
