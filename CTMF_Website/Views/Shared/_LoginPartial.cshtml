<div id="login" class="modal fade" role="dialog">
	<div class="modal-dialog" style="width:400px">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title" style="text-align: center; font-weight: bold; font-size: 1.4em; text-transform: uppercase; color: #B00622">Đăng Nhập</h4>
			</div>
			<div class="modal-body">
				@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true)
					<div style="width:300px;margin:0px auto">
						<div class="row" style="margin-bottom:10px">
							<div>
								@Html.LabelFor(m => m.Username)
							</div>
							<div>
								@Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
							</div>
							<div>
								@Html.ValidationMessageFor(m => m.Username, String.Empty, new { @style = "color:red" })
							</div>
						</div>
						<div class="row" style="margin-bottom:10px">
							<div>
								@Html.LabelFor(m => m.Password)
							</div>
							<div>
								@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
							</div>
							<div>
								@Html.ValidationMessageFor(m => m.Password, String.Empty, new { @style = "color:red" })
							</div>
						</div>
						<div class="row" style="margin-bottom:10px">
							<div class="col-sm-6">
								<label><input type="checkbox"> Nhớ tài khoản</label>
							</div>
							<div class="col-sm-6 radio-right">
								<p>
									<a href="" title="Quên mật khẩu">Quên mật khẩu</a>
								</p>
							</div>
						</div>
						<div class="row">
							<input class="btn btn-primary" value="Đăng nhập" type="submit">
							<button type="button" class="btn btn-danger">Google+</button>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

