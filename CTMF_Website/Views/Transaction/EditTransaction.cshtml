@model CTMF_Website.Models.EditTransaction
@{
	ViewBag.Title = "EditTransaction";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	#userinfo {
		width: 60%;
		margin: auto;
		margin-top: 50px;
		box-shadow: 0px 0px 7px rgba(0, 0, 0, 0.5);
		border-radius: 10px;
		background-color: #fff;
	}

	#userinfo-title {
		padding: 10px 30px 10px;
		color: #C41230;
		font-size: 28px;
		font-family: "Roboto Condensed";
		font-weight: bold;
		text-transform: uppercase;
	}
</style>
@{
	List<SelectListItem> items = (List<SelectListItem>)ViewData["TransType"];
}
<link href="~/CSS/table.css" rel="stylesheet" />
<div class="container" style="background-color: #fff;box-shadow: 0px 0px 7px rgba(0, 0, 0, 0.5);border-radius: 7px;">
	<legend class="table-title">Chỉnh sửa giao dịch</legend>
	<div>
		<div class="table-body">
			<div style="margin-bottom:20px;">
				@using (Html.BeginForm("EditTransaction", "Transaction", FormMethod.Post, new { @class = "form-horizontal" }))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true)

					<div class="form-group" style="margin-top: 20px">
						@Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
						<div class="col-sm-5">
							@Html.DisplayFor(m => m.Username)
							@Html.HiddenFor(m => m.Username)
						</div>
					</div>

					<div class="form-group" style="margin-top: 20px">
						@Html.LabelFor(m => m.TransactionTypeID, new { @class = "control-label col-sm-2" })
						<div class="col-sm-5">
							@Html.DropDownListFor(m => m.TransactionTypeID, new SelectList(items, "Value", "Text", Model.TransactionTypeID))
						</div>
					</div>

					<div class="form-group" style="margin-top: 20px">
						@Html.LabelFor(m => m.Value, new { @class = "control-label col-sm-2" })
						<div class="col-sm-5">
							@Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
						</div>
					</div>

					<div class="form-group" style="margin-top: 20px">
						@Html.LabelFor(m => m.TransactionContent, new { @class = "control-label col-sm-2" })
						<div class="col-sm-5">
							@Html.TextBoxFor(m => m.TransactionContent, new { @class = "form-control" })
						</div>
					</div>

					<div class="form-group" style="margin-top: 20px">
						@Html.LabelFor(m => m.InsertedDate, new { @class = "control-label col-sm-2" })
						<div class="col-sm-5">
							@Html.TextBoxFor(m => m.InsertedDate, new { @class = "form-control" })
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-2">
							<input type="submit" class="btn btn-primary" value="Cập nhật">
						</div>
						<div class="col-sm-2">
							<a href="~/Transaction/ListTransaction" class="btn btn-danger">Hủy</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
