@using CTMF_Website.Models
@model RechargeMoney
@{
    ViewBag.Title = "RechargeMoney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.addForm {
		width: 60%;
		margin: auto;
		margin-top: 50px;
		box-shadow: 0px 0px 7px rgba(0, 0, 0, 0.5);
		border-radius: 10px;
		background-color: #fff;
		/*opacity: 0.9;*/
	}

	.title {
		padding: 10px 30px 10px;
		color: #C41230;
		font-size: 28px;
		font-family: "Roboto Condensed";
		font-weight: bold;
		text-transform: uppercase;
	}
</style>

<div class="addForm">
	<legend class="title">Nạp tiền</legend>
	<div class="container">
		@using (Html.BeginForm("RechargeMoney", "Transaction", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.Username, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.AmountOfMoney, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.AmountOfMoney, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.AmountOfMoney, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<input type="submit" class="btn btn-danger" value="Submit">
				</div>
			</div>
		}
	</div>
</div>


