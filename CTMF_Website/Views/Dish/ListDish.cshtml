@model System.Data.DataTable
@{
	ViewBag.Title = "ListDish";
}

<link href="~/CSS/table.css" rel="stylesheet" />

@{
	List<SelectListItem> items = (List<SelectListItem>)ViewData["DishType"];
}


<script>
	$(document).ready(function () {
		var notExist = '@(ViewBag.notExistDish)';
		if (notExist != '') {
			alert('@Html.Raw(ViewBag.notExistDish)');
		}
	});
</script>

<div class="container container-fix">
	<fieldset>
		<legend class="title">Quản lý món ăn</legend>
		<div class="table-body">
			<div class="row" style="margin-bottom:20px;">
				<div class="col-md-3">
					<a href="~/Dish/AddDish" class="btn btn-primary">Thêm món ăn mới</a>
				</div>

				<div class="col-md-3">

				</div>


				@using (Html.BeginForm("ListDish", "Dish", FormMethod.Get))
				{
					<div class="col-md-3">
						<div id="custom-search-input">
							<div class="input-group">
								<input type="text" name="search" class="search-query form-control" placeholder="Tìm kiếm" />
								<span class="input-group-btn">
									<button class="btn btn-danger" type="submit">
										<span class=" glyphicon glyphicon-search"></span>
									</button>
								</span>
							</div>
						</div>
					</div>

					<div class="col-md-3">
						@Html.DropDownList("filter", new SelectList(items, "Value", "Text"), new { @class = "form-control" })
					</div>
				}

			</div>
			<table class="table table-bordered table-hover table-condensed">
				<thead>
					<tr>
						<th>STT</th>
						<th>Tên món ăn</th>
						<th>Loại món ăn</th>
						<th>Quản lý</th>
					</tr>
				</thead>
				<tbody>
					@{
						int count = 0;
					}
					@foreach (System.Data.DataRow row in Model.Rows)
					{
						count++;
						using (Html.BeginForm("DeleteDish", "Dish", new { dishID = @row["DishID"] }, FormMethod.Post, new { id = @row["DishID"] }))
						{
							<tr>
								<td>@count</td>
								<td>@row["Name"]</td>
								<td>@row["TypeName"]</td>
								<td>
									<div class="">
										<a href="@Url.Action("DetailDish", "Dish", new {dishID = @row["DishID"] })" class="btn btn-info" title="Chi tiết"><span class="glyphicon glyphicon-info-sign"></span></a>
										<a href="@Url.Action("EditDish", "Dish", new {dishID = @row["DishID"] })" class="btn btn-primary" title="Sửa"><span class="glyphicon glyphicon-pencil"></span></a>
										<a href="javascript:document.getElementById('@row["DishID"]').submit()" onclick="return confirm('Bạn có chắc chắn muốn xóa món: @row["Name"]')" class="btn btn-danger" title="Xóa"><span class="glyphicon glyphicon-remove-sign"></span></a>

										@*<a href="@Url.Action("DeleteDish", "Dish", new {dishID = @row["DishID"] })" class="btn btn-danger" title="Xóa"><span class="glyphicon glyphicon-remove-sign"></span></a>*@
									</div>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
		@*<div id="footer">
				<div>
					<nav>
						<ul class="pager">
							<li><a href="#">Previous</a></li>
							<li><a href="#">Next</a></li>
						</ul>
					</nav>
				</div>
			</div>*@
	</fieldset>
</div>
