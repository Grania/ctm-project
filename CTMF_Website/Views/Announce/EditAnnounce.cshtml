@model CTMF_Website.Models.AnnounceModel
@{
	ViewBag.Title = "EditAnnounce";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="addForm">
	<h2>Sửa thông tin mới</h2>
	<div class="container">
		@using (Html.BeginForm("EditAnnounce", "Announce", new { announceID = Model.annoucemenID}, FormMethod.Post, new { @class = "form-horizontal" }))
  {
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			<div class="form-group">
				@Html.LabelFor(m => m.title, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextBoxFor(m => m.title, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2">

				</div>
				<div class="col-sm-5">@Html.ValidationMessageFor(model => model.title, String.Empty, new { @style = "color:red" })</div>
			</div>
			<div class="form-group" style="margin-top: 20px">
				@Html.LabelFor(m => m.subject, new { @class = "control-label col-sm-2" })
				<div class="col-sm-5">
					@Html.TextAreaFor(m => m.subject, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<input type="submit" class="btn btn-danger" value="Chỉnh sửa">
				</div>
			</div>
  }
	</div>
</div>
